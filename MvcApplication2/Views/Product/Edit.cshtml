@model MvcApplication2.Models.Product
@{
    ViewBag.Title = "Edit Line Item Product";
    Layout = "~/Views/Shared/_MvcLayout.cshtml";
}
<script>
    $(document).ready(
        function () {
            $("#cityManagerContainer").fadeIn();
        }
    );
</script>
<h2>Edit Line Item Product</h2>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Product Type</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.RequiredByTypeId)
        @Html.HiddenFor(model => model.ProductTypeId)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.Quantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RequiredBy)
            
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.RequiredBy, new { disabled = "disabled", @readonly = "readonly" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.IsCityStorage)
        </div>
         <div class="editor-field">
             @Html.TextBoxFor(model => model.IsCityStorage, new { disabled = "disabled", @readonly = "readonly" })
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    <a href="@TempData["ReturnURL"]">Back</a>
</div>

